<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="criminal.codedady.com.criminal.Login"
    android:background="@drawable/background"
    android:layout_weight="2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/logo"
                />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#fff"

                colorControlNormal="#fff"
                colorControlActivated="#fff"
                colorControlHighLight="#fff"
                >

                <EditText
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:hint="Email"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:textColorHint="#fff"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                colorControlNormal="#fff"
                colorControlActivated="#fff"
                colorControlHighLight="#fff"
                >

                <EditText
                    android:id="@+id/input_email2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:hint="Password"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff" />
            </android.support.design.widget.TextInputLayout>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/input_layout_email2"
    android:layout_marginTop="40dp"
    app:cardElevation="10dp"
    android:layout_marginHorizontal="20dp">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#FA5438"

    android:text="Signin"
    android:src="@mipmap/button"
    />
</android.support.v7.widget.CardView>
        </RelativeLayout>




    </LinearLayout>


</LinearLayout>
