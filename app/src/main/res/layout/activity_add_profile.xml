<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="criminal.codedady.com.criminal.AddProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/addprofile"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />
        </RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email2"
            colorControlActivated="#fff"
            colorControlHighLight="#fff"
            colorControlNormal="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/input_email2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:hint="Crime Number"
                android:inputType="textEmailAddress"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/input_layout_email2"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:text="Select Station"
            android:textAllCaps="false"
            android:background="@drawable/roundbutton"
            android:layout_marginHorizontal="20dp"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email3"
            colorControlActivated="#fff"
            colorControlHighLight="#fff"
            colorControlNormal="#fff"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/input_email3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:hint="Section of Law"
                android:inputType="textEmailAddress"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/input_layout_email3"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:text="Type of Person"
            android:textAllCaps="false"
            android:padding="20dp"
            android:background="@drawable/roundbutton"
            android:layout_marginHorizontal="20dp"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_below="@id/spinner2"
            android:layout_height="wrap_content"
            android:id="@+id/spinner3"
            android:text="Major Head"
            android:background="@drawable/roundbutton"
            android:padding="20dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"/>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_below="@id/spinner3"
            android:layout_height="wrap_content"
            android:id="@+id/spinner4"
            android:background="@drawable/roundbutton"
            android:text="Minor Head"
            android:padding="20dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"/>


        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_below="@id/spinner4"
            android:layout_height="wrap_content"
            android:id="@+id/spinner5"
            android:background="@drawable/roundbutton"
            android:text="Method"
            android:padding="20dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email4"
            colorControlActivated="#fff"
            colorControlHighLight="#fff"
            colorControlNormal="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/input_email4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email5"
            colorControlActivated="#fff"
            colorControlHighLight="#fff"
            colorControlNormal="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_email4"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/input_email5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:hint="Phone"
                android:inputType="textEmailAddress"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_email6"
            colorControlActivated="#fff"
            colorControlHighLight="#fff"
            colorControlNormal="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_email5"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff">

            <EditText
                android:id="@+id/input_email6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:hint="Address"
                android:inputType="textEmailAddress"
                android:textColor="#fff" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_below="@id/input_layout_email6"
            android:layout_height="wrap_content"
            android:id="@+id/spinner6"
            android:text="Status"
            android:background="@drawable/roundbutton"
            android:padding="20dp"
            android:textAllCaps="false"
            android:layout_marginHorizontal="20dp"/>

        <ImageView
            android:layout_below="@id/spinner6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/submit"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>


</ScrollView>
